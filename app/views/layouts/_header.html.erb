<header class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Band and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <div id="logo">
        <%= link_to image_tag("ilogo.png"), root_path, class: "logo" %>
        UIUC Twitter Study
      </div>

      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collection-navlinks" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <!-- -Collect nav links for toggling -->
    <div class="collapse navbar-collapse" id="collection-navlinks"> 
      <ul class="nav navbar-nav navbar-right">
      <% if !logged_in? %>
      <% else %>
        <li> <img src="<%=@user.image_url%>" alt="error"> </li>
        <li> <%= link_to raw("Logged in as #{User.find_by(twitter_id: session[:twitter_id]).nickname}"), User.find_by(twitter_id: session[:twitter_id]).twitter_url, target: :_blank %> </li>
        <li> <%= link_to "Logout", logout_path %> </li>
      <% end %>
      </ul>
    </div> <!-- navbar-collapse -->
  </div>
</header>
